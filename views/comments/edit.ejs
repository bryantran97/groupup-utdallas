<% include ../partials/header %>

<div class="container">
    <div class="row">
    <h1 style="text-align: center;">Edit your comment</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/events/<%= eventData_id %>/comments/<%= comment %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[text]" placeholder="text" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/events/<%= eventData_id %>">Go back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>